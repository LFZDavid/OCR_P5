{% extends "base.html.twig" %}

{% block title %}
{{parent()}}
-
{{title}}
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="add-btn-block">
		<a href="index.php?admin-post=form" class="btn btn-primary" style="margin-bottom:20px;"><i
				class="fas fa-plus-circle"></i>
		</a>
	</div>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Infos</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
			<tr>
				<td>
					{% if post.active %}
					<a href="index.php?post={{post.id}}">
						<h5 class="admin-list-post-title">{{post.title}}</h5>
					</a>
					{% else %}
					<h5 class="admin-list-post-title">- {{post.title}} -
						<i class="fas fa-eye-slash"></i>
					</h5>
					{% endif %}
					<em>
						Créé le :
						{{post.createdAt|date('d-m-Y')}}
					</em>
					<br>
					<em>
						{% if post.updatedAt is not null %}
						Modifié le :
						{{post.updatedAt|date('d-m-Y')}}
						{% endif %}
					</em>
				</td>
				<td>
					<div class="row action-btns">
						<a href="index.php?admin-post=form&amp;id_post={{post.id}}" class="btn btn-info"><i
								class="fas fa-pen"></i></a>
						<form action="index.php?admin-post=delete&amp;id_post={{post.id}}" method="POST"
							onclick="return confirm('Êtes-vous sûre ?')">
							<input type="hidden" name="_method" value="DELETE">
							<button class="btn btn-danger">
								<span class="glyphicon glyphicon-remove"><i class="fas fa-trash-alt"></i></span>
							</button>
						</form>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}