{% extends "base.html.twig" %}

{% block title %}
{{parent()}}
-
{{post.title}}
{% endblock %}

{% block body %}
<div class="title-block jumbotron">
	<div class="title-band">
		<h1 class="title">{{post.title}}</h1>
	</div>
</div>

<h2 class="post-chapot">{{post.chapo}}</h2>
<p class="post-date">

	{% if post.updated_at is defined %}
	Dernière mise à jour :
	{{post.created_at|date('d-m-Y')}}
	{% else %}
	Créé le :
	{{post.created_at|date('d-m-Y')}}
	{% endif %}
	par :
	{{post.author.name}}
</p>
<p class="post-content">{{post.content}}</p>
{% include "includes/post-comments.html.twig" %}
{% endblock %}