{% extends "base.html.twig" %}

{% block title %}
{{parent()}} - {{title}}
{% endblock %}

{% block body %}
<h1 class="post-title jumbotron">{{title}}</h1>
<h2 class="post-chapot">{{post.chapo}}</h2>
<p class="post-date">

{% if post.updated_at != null%}
  Dernière mise à jour : {{post.updated_at}}
  {% else %}
  Créé le : {{post.created_at}}
{% endif %}
par : {{post.id_author}}
</p>
<p class="post-content">{{post.content}}</p>
{% endblock %}