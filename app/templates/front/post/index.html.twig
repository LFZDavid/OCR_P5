{% extends "base.html.twig" %}

{% block title %}
{{parent()}}
-
{{title}}
{% endblock %}

{% block body %}

<div class="container-fluid">
	<div class="row">
		{% for post in posts %}
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="https://picsum.photos/200/200?random={{post.id}}" alt="{{post.title}}" class="post-img">
				<h3 class="mini-post-title">
					{{post.title}}
				</h3>
				<h4 class="mini-post-chapo">
					{{post.chapo}}
				</h4>
				<em class="mini-post-date">
					{% if post.updated_at is defined %}
					Dernière mise à jour :
					{{post.updated_at|date('d-m-Y')}}
					{% else %}
					Créé le :
					{{post.created_at|date('d-m-Y')}}
					{% endif %}
				</em>
				<br>
				<div class="post-link-btn">
					<a href="index.php?post={{post.id}}" class="post-link">
						<button class="btn btn-info">Lire</button>
					</a>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>


{% endblock %}