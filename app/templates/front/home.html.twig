{% extends "base.html.twig" %}

{% block title %}
{{parent()}}
-
{{title}}
{% endblock %}

{% block body %}
<section class="home-band">
	<div class="lang-logos-contain">
		<i class="fab fa-html5" style="color:#DE4C26;"></i>
		<i class="fab fa-css3-alt" style="color:#3C97D0;"></i>
		<i class="fab fa-js-square" style="color:#EFD81E;"></i>
		<i class="fab fa-bootstrap" style="color:#5C3D87;"></i>
		<i class="fab fa-php" style="color:#858EBB;"></i>
		<i class="fab fa-symfony" style="color:black;"></i>
		<i class="fab fa-wordpress-simple" style="color:#2A7397;"></i>
		<i class="fab fa-git-alt" style="color:#E94E31;"></i>
		<i class="fab fa-github-square" style="color:#24282E;"></i>
	</div>
	<div class="dwn-cv-contain">
		<a href="/downloads/CV David Cornacchia.pdf" target="_blank" class="btn btn-outline-info">
			Voir mon CV
		</a>
	</div>
</section>
<section class="last-posts">
	<h3>Derniers projets</h3>
	<div class="divider"></div>
	<div class="row">
		{% for post in last_posts %}
		<div class="col-sm-12 col-md-4">
			<div class="card mini-post">
				<img src="https://picsum.photos/150/150?random={{post.id}}" alt="{{post.title}}" class="card-img-top">
				<div class="card-body">
					<a href="/post/{{post.id}}">
						<h3 class="mini-post-title">
							{{post.title}}
						</h3>
						<h4 class="mini-post-chapo">
							{{post.chapo}}
						</h4>
					</a>
					<br>
					<em>
						{% if post.updatedAt !="" %}
						Dernière mise à jour le :
						{{post.updatedAt|date('d-m-Y')}}
						{% else %}
						Créé le :
						{{post.createdAt|date('d-m-Y')}}
						{% endif %}
					</em>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</section>
<section class="last-posts">
	<h3>Derniers commentaires</h3>
	<div class="divider"></div>
	{% for comment in last_comments %}
	<div class="comment card">
		<div class="comment-infos">
			<strong>{{comment.author_name}}
				:
			</strong>
			<em>
				{{comment.created_at|date('d-m-Y')}}
			</em>
		</div>
		<div class="comment-content">
			<a href="/post/{{comment.id_post}}" target="_blank">
				{{comment.post_title}}
			</a>
			<br>
			<em>"{{comment.content}}"</em>
		</div>
	</div>
	{% endfor %}
</section>

{% include "/includes/contact-form.html.twig" %}

{% endblock %}