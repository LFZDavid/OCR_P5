{% block body %}
<h1 class="users-title jumbotron">{{title}}</h1>
{% if message !=[] %}
<div class="alert alert-{{message.type == 'error'?'danger':'success'}}" role="alert">
    {{message.content}}
</div>
{% endif %}

<div class="container">
    <form action="index.php?user-form" method="POST">
        {% for key, input in inputs %}
        <div class="mb-3 form-group">
            <label for="{{key}}" class="form-label">{{input.label}}</label>
            <input type="{{input.type}}" class="form-control" name="{{key}}" id="{{key}}" value="{{input.value}}">
        </div>
        {% endfor %}
        <input type="hidden" id="user-form-submit" value="true">
        <input type="submit" class="btn btn-success">
    </form>
    <a href="index.php">
