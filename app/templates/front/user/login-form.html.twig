{% extends "base.html.twig" %}

{% block title %}
{{parent()}}
-
{{title}}
{% endblock %}

{% block body %}
<h1 class="title jumbotron">{{title}}</h1>
{% for message in messages %}
{% if message.type == "error" %}
<div class="alert alert-danger">
    {% elseif message.type == "success" %}
    <div class="alert alert-success">
        {% endif %}
        {{message.content}}
    </div>
    {% endfor %}
    <div div class="container">
        <div class="login-form">
            <form action="index.php?user=login" method="POST">
                {% for key, input in inputs %}
                <div class="mb-3 form-group">
                    <label for="{{key}}" class="form-label">{{input.label}}</label>
                    <input type="{{input.type}}" class="form-control" name="{{key}}" id="{{key}}"
                        value="{{input.value}}">
                </div>
                {% endfor %}
                <input type="hidden" id="user-form-submit" value="true">
                <input type="submit" class="btn btn-success">
            </form>
            <p>Pas encore inscrit ? <a href="index.php?user=form">Inscription</a></p>
            <a href="index.php">
                <button class="btn btn-info">Retour à l'acceuil</button>
            </a>
        </div>
        <a href="">Mot de passe oublié ?</a>
        <div class="lost-pwd-form">
            <form action="index.php?user=lost-pwd" method="POST">
                <div class="input-group mb-3">
                    <input type="{{lost_pwd_form.type}}" class="form-control" name="{{lost_pwd_form.name}}"
                        id="{{lost_pwd_form.name}}" placeholder="Saisissez votre email">
                    <button class="btn btn-secondary" type="submit" id="button-addon2">Envoyer</button>
                </div>
            </form>
        </div>


    </div>

    {% endblock %}